                    <li><%= link_to "Home", root_path %></li>
                    <%-# = render 'devise/menu/registration_items' -%>
                    <%= render 'devise/menu/login_items' %>
                </ul>
            </div>
          </nav>

        </div>
        <div id="main-content" class="col-xs-9">
          <!--  main content -->
          <%= yield %>
        </div>
      </div>
